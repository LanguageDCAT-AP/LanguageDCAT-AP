sh:CorpusShape
    a sh:NodeShape ;
    sh:closed true;
    sh:ignoredProperties (rdf:type) ;
    sh:targetClass edc:Asset ;
    # Common Properties
    sh:property
            sh:TitleProp,
            sh:AlternativeProp,
            sh:VersionProp,
            sh:DescriptionProp,
            sh:AdmsIdentifierProp,
            sh:DomainProp,
            sh:IprHolderProp,
            sh:ConformsProp,
            sh:DocumentedByProp,
            sh:KeywordProp,
            sh:LrTypePropVal ,
            sh:LrTypePropCRD ,
            sh:SamplesProp ,
            sh:DatasetDistributionProp ,
            sh:TemporalProp ;
    sh:property
            sh:CorpusSubclassProp ,
            sh:AnnotationTypeProp ,
            sh:MediaTypeProp ,
            sh:AnonymizedProp ,
            sh:AnonymizationDetailsProp ,
            sh:SensitiveDataIncludedProp,
            sh:SensitiveDataDetailsProp ,
            sh:PersonalDataIncludedProp ,
            sh:PersonalDataDetailsProp ,
            sh:Î—asTechnicalOrganisationalMeasureProp,
            sh:DataProtectionPrincipleAppliedProp,
            sh:LingualityTypeProp ,
            sh:MultilingualityTypeProp ,
            sh:LanguageProp ,
            sh:SourceLanguageProp ,
            sh:TargetLanguageProp ,
            sh:PivotLanguageProp ,
            sh:HasOriginalSourceProp ,
            sh:OriginalSourceDescriptionProp,
            sh:SpatialProp .

sh:CorpusSubclassProp
    a sh:PropertyShape ;
    sh:path         ms:corpusSubclass ;
    sh:node         sh:CorpusSubclassRestriction  ;
    sh:nodeKind     sh:IRI ;
    sh:maxCount     1 .


sh:AnnotationTypeProp
    a sh:PropertyShape ;
    sh:path         ms:annotationType ;
    sh:node         sh:AnnotationTypeRestriction  ;
    sh:nodeKind     sh:IRI .

sh:AnnotationTypeRestriction
    a sh:NodeShape ;
    rdfs:comment "Annotation Type Restriction" ;
    rdfs:label "Annotation Type Restriction" ;
    sh:property [
          sh:hasValue omtd:AnnotationTypeScheme ;
          sh:nodeKind sh:IRI ;
          sh:path skos:inScheme ;
      ] .

sh:CorpusSubclassRestriction
    a sh:NodeShape ;
    rdfs:comment "Corpus Subclass Restriction" ;
    rdfs:label "Corpus Subclass Restriction" ;
    sh:property [
          sh:hasValue ms:CorpusSubclassTaxonomy ;
          sh:nodeKind sh:IRI ;
          sh:path skos:inScheme ;
      ] .