sh:LCRSubclassPropCRD
    a sh:PropertyShape ;
    sh:path         ms:lcrSubclass ;
    sh:message      "At most one ms:lcrSubclass value is allowed" ;
    sh:maxCount     1 .

sh:LCRSubclassPropVal
    a sh:PropertyShape ;
    sh:path         ms:lcrSubclass ;
    sh:node         sh:LCRSubclassRestriction  ;
    sh:nodeKind     sh:IRI ;
    sh:message      "Not a valid ms:lcrSubclass value" .

sh:LCRSubclassRestriction
    a sh:NodeShape ;
    rdfs:comment "LCR Subclass Restriction" ;
    rdfs:label "LCR Subclass Restriction" ;
    sh:property [
          sh:hasValue ms:LCRSubclassTaxonomy ;
          sh:nodeKind sh:IRI ;
          sh:path skos:inScheme ;
      ] .

sh:MetaLanguageProp
    a sh:PropertyShape   ;
    sh:path         ms:metalanguage ;
    sh:property     [
          sh:path         ms:languageCode;
          sh:node         sh:LanguageRestriction ;
          sh:nodeKind     sh:IRI ;
          sh:minCount 1;
          sh:maxCount 1;
          sh:message  "Invalid language"@en ;
      ],
    [
          sh:path         ms:region ;
          sh:node         sh:LocationRestriction ;
          sh:nodeKind     sh:IRI ;
          sh:maxCount 1;
      ],
    [
          sh:path         ms:script ;
          sh:node         sh:ScriptRestriction ;
          sh:nodeKind     sh:IRI ;
          sh:maxCount 1;
      ],
    [
          sh:path         ms:variant ;
          sh:node         sh:VariantRestriction ;
          sh:nodeKind     sh:IRI ;
      ],
    [
          sh:path         ms:languageVarietyName ;
          sh:datatype     rdf:langString ;
          sh:uniqueLang     true;
      ] .

sh:LingInfoProp
    a sh:PropertyShape ;
    sh:path         ms:linguisticInformation ;
    sh:node         sh:LingInfoSubclassRestriction ;
    sh:nodeKind     sh:IRI ;
    sh:message      "Not a valid ms:linguisticInformation value" .

sh:LingInfoSubclassRestriction
    a sh:NodeShape ;
    rdfs:comment "Linguistic Information Restriction" ;
    rdfs:label "Linguistic Information Restriction" ;
    sh:property [
          sh:hasValue lexmeta:MicrostructureFeatureScheme ;
          sh:nodeKind sh:IRI ;
          sh:path skos:inScheme ;
      ] .

sh:LexicalConceptualResourceShape
    a sh:NodeShape ;
    sh:closed true;
    sh:ignoredProperties (rdf:type) ;
    sh:targetClass edc:Asset ;
    # Common Properties
    sh:property
            sh:TitleProp,
            sh:AlternativeProp,
            sh:VersionProp,
            sh:DescriptionProp,
            sh:AdmsIdentifierProp,
            sh:DomainProp,
            sh:IprHolderProp,
            sh:ConformsProp,
            sh:DocumentedByProp,
            sh:KeywordProp,
            sh:LrTypePropVal ,
            sh:LrTypePropCRD ,
            sh:DatasetDistributionProp ,
            sh:TemporalProp ,
            sh:HasOriginalSourceProp ,
            sh:OriginalSourceDescriptionProp ;
    sh:property
            sh:LCRSubclassPropCRD ,
            sh:LCRSubclassPropVal ,
            sh:MediaTypeProp,
            sh:AnonymizedProp ,
            sh:AnonymizationDetailsProp ,
            sh:SensitiveDataIncludedProp,
            sh:SensitiveDataDetailsProp ,
            sh:PersonalDataIncludedProp ,
            sh:PersonalDataDetailsProp ,
            sh:Î—asTechnicalOrganisationalMeasureProp,
            sh:DataProtectionPrincipleAppliedProp,
            sh:LingualityTypeProp ,
            sh:MultilingualityTypeProp ,
            sh:LanguageProp,
            sh:SourceLanguageProp ,
            sh:TargetLanguageProp ,
            sh:PivotLanguageProp ,
            sh:MetaLanguageProp,
            sh:LingInfoProp ,
            sh:SpatialProp .





